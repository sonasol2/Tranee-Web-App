@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Tranee_Web_App.Models.ToDoTask>
@using Tranee_Web_App
@using Tranee_Web_App.Models
@* @model Tranee_Web_App.Models.ToDoTasks *@

@* @{ *@
@*     // ToDoTask toDoTask;     *@
@* } *@

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <p><a asp-action="AddTasks">Add Task</a></p>
    <ol>
        <h2>My Task</h2>
        @foreach (var task in Model)
        {
            <li>
                @task.TaskDescription
                <form asp-controller="Home" asp-action="DelTasks" method="post" asp-route-id="@task.Id">
                    <input type="submit" value="Delete">
                </form>
            </li>
        }
    </ol>
</div>
</body>
</html>